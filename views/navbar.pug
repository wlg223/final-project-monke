mixin navbar(loggedIn)
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
    a.navbar-brand(href='/') PokeRoll
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.nav.navbar-nav.mr-auto
        //we can add left-aligned things here
      ul.nav.navbar-nav.navbar-right
        li.nav-item
          a.nav-link(href='/pokemon') Pokemon
        if loggedIn
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false') #{username}
              .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdown')
                  a.dropdown-item(href='/trainers') Your Profile
                  .dropdown-divider
                  a.dropdown-item(href='/auth/logout') Sign out
        else
          a.nav-link(href='/auth/google') Login with Google
